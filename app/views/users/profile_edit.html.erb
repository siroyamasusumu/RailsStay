<p>プロフィール情報の編集</p>
    <div class="form-body">
        <% @user.errors.full_messages.each do |message| %>
            <div class="form-error">
                <%= message %>
            </div>
        <% end %>
        <%= form_tag("/users/#{@user.id}/profile_update", {multipart: true}) do %>
            <p>アイコン画像</p>
            <input name="image" type="file">
            <p>ユーザー名</p>
            <input name="name" value="<%= @user.name %>">
            <p>自己紹介</p>
            <input name="introduce" value="<%= @user.introduce %>">
            <br/>
            <input type="submit" value="保存">
        <% end %>
    </div>