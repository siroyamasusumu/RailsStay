<p id="notice"><%= notice %></p>

<h1>Rooms</h1>

<table>
  <thead>
    <tr>
      <th>施設名</th>
      <th>紹介文</th>
      <th>料金</th>
      <th>住所</th>
      <th>画像</th>
      <th>作成者</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @rooms.each do |room| %>
      <tr>
        <td><%= room.name_room %></td>
        <td><%= room.detail %></td>
        <td><%= room.price %></td>
        <td><%= room.address %></td>
        <td><%= room.image_room %></td>
        <td><%= room.user_id %></td>
        <td><%= link_to 'Show', room %></td>
        <td><%= link_to 'Edit', edit_room_path(room) %></td>
        <td><%= link_to 'Destroy', room, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

