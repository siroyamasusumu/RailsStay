<h1>施設一覧</h1>
<table>
    <thead>
        <tr>
            <th>画像</th>
            <th>施設名</th>
            <th>紹介文</th>
            <th>料金</th>
            <th>作成日</th>
            <th colspan="3"></th>
        </tr>
    </thead>

    <tbody>
    <% @rooms.each do |room| %>
        <tr>
            <td><%= room.image_room %></td>
            <td><%= room.name_room %></td>
            <td><%= room.detail %></td>
            <td><%= room.price %></td>
            <td><%= room.created_at %></td>
            <td><%= link_to '参照', "/rooms/#{room.id}" %></td>
            <td><%= link_to '編集', "/rooms/#{room.id}/edit" %></td>
            <td><%= button_to '削除', "/rooms/#{room.id}/destroy", { method: :delete, data: { confirm: '本当に削除しますか?'}} %></td>
        </tr>
    <% end %>
    </tbody>
</table>

